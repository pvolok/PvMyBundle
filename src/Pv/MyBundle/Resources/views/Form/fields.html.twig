{% block form_row %}
{% spaceless %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form, { attr: { class: attr.class is defined ? attr.class : 'form-control' } }) }}
    </div>
{% endspaceless %}
{% endblock %}

{% block button_row %}
    {{ form_widget(form, { attr: { class: attr.class is defined ? attr.class : 'btn btn-primary' } }) }}
    &nbsp;
{% endblock %}
